{
  "name": "nodeviz-testapp",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "prepare": "svelte-kit sync && npm run smui-theme",
    "smui-theme": "smui-theme compile static/smui.css -i src/theme",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@storybook/addon-actions": "^6.5.8",
    "@storybook/addon-essentials": "^6.5.8",
    "@storybook/addon-interactions": "^6.5.8",
    "@storybook/addon-links": "^6.5.8",
    "@storybook/builder-webpack4": "^6.5.8",
    "@storybook/manager-webpack4": "^6.5.8",
    "@storybook/svelte": "^6.5.8",
    "@storybook/testing-library": "^0.0.11",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.1",
    "@types/jest": "^27.5.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "ress": "^5.0.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-jester": "^2.3.2",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.6",
    "ts-jest": "^28.0.3",
    "tslib": "^2.4.0",
    "typescript": "~4.7.2"
  },
  "type": "module",
  "dependencies": {
    "@smui-extra/accordion": "^6.0.0-beta.16",
    "@smui/button": "^6.0.0-beta.16",
    "@smui/data-table": "^6.0.0-beta.16",
    "@smui/dialog": "^6.0.0-beta.16",
    "@smui/icon-button": "^6.0.0-beta.16",
    "@smui/switch": "^6.0.0-beta.16",
    "@smui/textfield": "^6.0.0-beta.16",
    "@storybook/addon-svelte-csf": "^2.0.4",
    "firebase": "^9.8.2",
    "invertly": "^1.0.0",
    "nodeviz": "*",
    "rxfire": "^6.0.3",
    "rxjs": "^7.5.5",
    "smui-theme": "^6.0.0-beta.16",
    "uuid": "^8.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ]
  }
}
